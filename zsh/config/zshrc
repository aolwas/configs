# Update fpath before compinit

fpath=(
  /usr/local/share/zsh-completions
  /usr/local/share/zsh/site-functions
  ~/.asdf/completions
  ~/.conda-zsh-completion.git
  $fpath
)

# init autocompletion.
autoload -U compinit
compinit

# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:/usr/local/bin:$PATH
case `uname` in
  Darwin)
  ;;
  Linux)
    export HOMEBREW_PREFIX="/home/linuxbrew/.linuxbrew"
    export HOMEBREW_CELLAR="/home/linuxbrew/.linuxbrew/Cellar"
    export HOMEBREW_REPOSITORY="/home/linuxbrew/.linuxbrew/Homebrew"
    export MANPATH="/home/linuxbrew/.linuxbrew/share/man:${MANPATH+:MANPATH}"
    export INFOPATH="/home/linuxbrew/.linuxbrew/share/info:${INFOPATH:-}"
    # commands for Linux go here
    if [[ -z ${container} ]]; then
	# on host
    	export PATH=/home/linuxbrew/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/sbin:$PATH:$HOME/bin:$HOME/.local/bin:$HOME/.cargo/bin:$HOME/.devops-snippets:$HOME/.krew/bin
	# >>> conda initialize >>>
	# !! Contents within this block are managed by 'conda init' !!
	__conda_setup="$('/home/aolwas/mambaforge/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
	if [ $? -eq 0 ]; then
    		eval "$__conda_setup"
	else
    		if [ -f "/home/aolwas/mambaforge/etc/profile.d/conda.sh" ]; then
# . "/home/aolwas/mambaforge/etc/profile.d/conda.sh"  # commented out by conda initialize
    		else
# export PATH="/home/aolwas/mambaforge/bin:$PATH"  # commented out by conda initialize
    		fi
	fi
	unset __conda_setup
	# <<< conda initialize <<<
	fpath=(
  		/home/linuxbrew/.linuxbrew/share/zsh/site-functions
  		$fpath
	)

    else
        # in container
        echo "Inside container"
	export PATH=$PATH:$HOME/bin:$HOME/.local/bin:$HOME/.cargo/bin:/home/linuxbrew/.linuxbrew/bin:/home/linuxbrew/.linuxbrew/sbin:$HOME/.devops-snippets:$HOME/.krew/bin
	fpath=(
  		$fpath
  		/home/linuxbrew/.linuxbrew/share/zsh/site-functions
	)
    fi

  ;;
esac

# User configuration
